<h3>PersonInfo</h3>
<EditForm Model="personModel" OnValidSubmit="ValidPersonSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <InputText @bind-Value="personModel.FirstName" placeholder="First Name" class="form-control" />
    <InputText @bind-Value="personModel.LastName" placeholder="Last Name" class="form-control" />
    <button class="btn btn-primary" type="submit">Submit</button>

</EditForm>

<h3>People List</h3>
@foreach (var p in people)
{
    <li>@p.FirstName @p.LastName</li>
}

@code {
    private PersonModel personModel = new();
    private List<PersonModel> people = new();


    private void ValidPersonSubmit()
    {
        people.Add(personModel);
        personModel = new();
    }
}
